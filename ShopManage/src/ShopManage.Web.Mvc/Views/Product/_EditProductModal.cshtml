@using Abp.MultiTenancy
@using ShopManage.Shop.Product.Dtos
@using ShopManage.Web.Models.Common.Modals
@model ProductListDto
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProduct")))
<div class="modal-body">
    <form name="ProductEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group form-float">
            <div class="form-line">
                <input class="form-control" type="text" name="TenantID" value="@Model.TenantID" required maxlength="64">
                <label class="form-label">@L("TenantID")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" name="Code" class="form-control" value="@Model.Code" required maxlength="128">
                <label class="form-label">@L("Code")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" name="Barcode" class="form-control" value="@Model.Barcode" required maxlength="128">
                <label class="form-label">@L("Barcode")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="">
                <input id="isactive" type="checkbox" name="IsDeleted" value="true" @(Model.IsDeleted ? "checked" : "") class="form-control" />
                <label for="isactive" class="form-label">@L("IsDeleted")</label>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/view-resources/Views/Product/_EditProductModal.js" asp-append-version="true"></script>
